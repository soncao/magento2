<?php if ($this->displayBoth()):?>
<tr class="totals shipping excl">
    <th style="<?php echo $this->getStyle() ?>" class="mark" colspan="<?php echo $this->getColspan(); ?>" scope="row">
        <?php echo $this->getExcludeTaxLabel() ?>
    </th>
    <td style="<?php echo $this->getStyle() ?>" class="amount" data-th="<?php echo $this->escapeHtml($this->getExcludeTaxLabel()); ?>">
