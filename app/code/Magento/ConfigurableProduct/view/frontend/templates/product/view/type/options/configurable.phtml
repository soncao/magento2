/** @var $this \Magento\ConfigurableProduct\Block\Product\View\Type\Configurable*/
$_product    = $this->getProduct();
$_attributes = $this->decorateArray($this->getAllowAttributes());
?>
<?php if ($_product->isSaleable() && count($_attributes)):?>
