        <img src="<?php echo $this->getLogoSrc() ?>" alt="<?php echo $this->getLogoAlt() ?>" />
    </strong>
<?php else:?>
    <a class="logo" href="<?php echo $this->getUrl(''); ?>" title="<?php echo $storeName ?>">
        <img src="<?php echo $this->getLogoSrc() ?>" alt="<?php echo $storeName ?>" />
    </a>
<?php endif?>
