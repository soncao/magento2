<dl class="payment-method checkmemo">
    <dt class="title"><?php echo $this->escapeHtml($this->getMethod()->getTitle()) ?></dt>
    <?php if ($this->getInfo()->getAdditionalData()): ?>
        <?php if ($this->getPayableTo()): ?>
            <dd class="content">
                <strong><?php echo __('Make Check payable to') ?></strong>
                <?php echo $this->escapeHtml($this->getPayableTo()) ?>
            </dd>
        <?php endif; ?>
        <?php if ($this->getMailingAddress()): ?>
            <dd class="content">
                <strong><?php echo __('Send Check to') ?></strong>
                <address class="checkmo mailing address">
                    <?php echo nl2br($this->escapeHtml($this->getMailingAddress())) ?>
                </address>
            </dd>
        <?php endif; ?>
    <?php endif; ?>
</dl>
