$attributes = $this->getCssClass() ? ' class="' . $this->getCssClass() . '"' : '';
$attr = $this->getAttributes();
if (!empty($attr)) {
    foreach ($this->getAttributes() as $attribute => $value) {
        $attributes .= ' ' . $attribute . '="' . $value . '"';
    }
};
echo
    '<' . $this->getTag() . $attributes . '>' . $this->getText() . '</' . $this->getTag() . '>';
